<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form action={{ path('custom.cartmodule.confirmed')}} method="POST" class='ms-auto'>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Want to confirm your order!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
          <div class="my-3 mx-1 row">
            <label for="address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
              <input id="address" name="address" type="address" class="form-control" required>
            </div>
          </div>
          <div class="d-flex px-2">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="card_payment" id="card_payment" disabled>
              <label class="form-check-label" for="card_payment">
              Card payment
              </label>
            </div>
            <div class="form-check ms-2">
              <input class="form-check-input" type="radio" name="cash" id="cash" checked>
              <label class="form-check-label" for="cash">
              Cash on delivery
              </label>
            </div>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <button type='submit' class="btn btn-primary">Yes</button>
        </div>
      </div>
    </form>
  </div>
</div>